#!/bin/sh

if [ -f cld.pid ]
then
	echo "cld.pid file found.  daemon still running?"
	exit 1
fi
if [ -f chunkd.pid ]
then
	echo "chunkd.pid file found.  daemon still running?"
	exit 1
fi
if [ -f tabled.pid ]
then
	echo "tabled.pid file found.  daemon still running?"
	exit 1
fi

# May be different on Solaris... like /usr/libexec or such.
/usr/sbin/chunkd -f $top_srcdir/test/chunkd-test.conf
/usr/sbin/cld -d data/cld -P cld.pid -p 18081

../server/tabled -C $top_srcdir/test/tabled-test.conf

sleep 3

exit 0
